[Unit]
Description=Hostapd {{ item }}       IEEE 802.11 AP, IEEE 802.1X/WPA/WPA2/EAP/RADIUS Authenticator
Conflicts=hostapd.service {% if item == "open" %}hostapd_secure{% else %}hostapd_open{% endif %}.service
After=network.target hostapd.service {% if item == "open" %}hostapd_secure.service{% endif %}
StartLimitIntervalSec=500
StartLimitBurst=5

[Service]
Type=forking
PIDFile=/run/hostapd.pid
ExecStart=/usr/sbin/hostapd /etc/hostapd/hostapd_{{ item }}.conf -P /run/hostapd.pid -B
RemainAfterExit=no
Restart=on-failure
RestartSec=2s

[Install]
WantedBy=multi-user.target
